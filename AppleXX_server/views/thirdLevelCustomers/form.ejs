<div class="card">
    <div class="card-header">
        <h2><%= title %> <small>对应项目计划中的Kunden B
        </small></h2>
    </div>
    
    <div class="card-body card-padding">
        <form role="form" method="post">
            <div class="form-group fg-line">
                <label for="parentId">隶属于一级客户ID</label>
                <input type="text" name="parentId" class="form-control input-sm" id="parentId" value="<%= customer.parentId || "" %>" placeholder="请输入隶属于一级客户ID">
            </div>
            <div class="form-group fg-line">
                <label for="name">姓名</label>
                <input type="text" name="name" class="form-control input-sm" id="name" value="<%= customer.name || "" %>" placeholder="请输入姓名">
            </div>
            <div class="form-group fg-line">
                <label for="sex">性别</label>
                <br/>
                <label class="radio radio-inline m-r-20">
                    <input type="radio" name="sex" value="男" <% if(customer.sex=='男') { %> checked <% } %>>
                    <i class="input-helper"></i>
                    男
                </label>
                
                <label class="radio radio-inline m-r-20">
                    <input type="radio" name="sex" value="女" <% if(customer.sex=='女') { %> checked <% } %>>
                    <i class="input-helper"></i>
                    女
                </label>
            </div>
            <div class="form-group fg-line">
                <label for="contact">联系方式</label>
                <input type="contact" name="contact" class="form-control input-sm" id="contact" value="<%= customer.contact || "" %>" placeholder="请输入联系方式">
            </div>
            <div class="form-group fg-line">
                <label for="birthday">生日</label>
                <div class="dtp-container fg-line">
                    <input type='text' name="birthday" class="form-control date-picker" id="birthday" value="<%= customer.birthday || "" %>" placeholder="请输入生日">
                </div>
            </div>
            <div class="form-group fg-line">
                <label for="passport">护照号码</label>
                <input type="text" name="passport" class="form-control input-sm" id="passport" value="<%= customer.passport || "" %>" placeholder="请输入护照号码">
            </div>
            <div class="form-group fg-line">
                <label for="others">其它</label>
                <input type="text" name="others" class="form-control input-sm" id="others" value="<%= customer.others || "" %>" placeholder="请输入其它">
            </div>
            <button type="submit" class="btn btn-primary btn-sm m-t-10">提交</button>
        </form>
    </div>
</div>